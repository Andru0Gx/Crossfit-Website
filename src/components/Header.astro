---
import { getSession } from "auth-astro/server";
const session = await getSession(Astro.request);

const logout = [
    {
        title: "Home",
        url: "/",
    },
    {
        title: "Contacto",
        url: "https://wa.me/584249597302",
        rel: "noopener noreferrer",
        target: "_blank",
    },
    {
        title: "Iniciar Sesi贸n",
        type: "button",
        disabled: true,
        soondate: "Proximamente!",
        url: "",
    },
];

const login = [
    {
        title: "Home",
        url: "/",
        rel: undefined,
        target: undefined,
    },
    {
        title: "Wods",
        url: "/Wods.astro",
        disabled: true,
        soondate: "Proximamente!",
    },
    {
        title: "Tienda",
        url: "/Tienda.astro",
        disabled: true,
        soondate: "Proximamente!",
    },
    {
        title: "Configuraci贸n",
        url: "/Configuraci贸n.astro",
        disabled: true,
        soondate: "Proximamente!",
    },
    {
        title: "Cerrar Sesi贸n",
        type: "button",
        disabled: true,
        soondate: "Proximamente!",
        url: "",
    },
];

let pages;

if (session) {
    pages = login.map((page) => ({
        ...page,
        active: page.url === Astro.url.pathname,
    }));
} else {
    pages = logout.map((page) => ({
        ...page,
        active: page.url === Astro.url.pathname,
    }));
}

import { SignIn, SignOut } from "auth-astro/components";
import HamburguerMenu from "./HamburguerMenu.astro";
---

<header
    class="w-full flex justify-between px-3 pt-2 h-20 items-center shadow-lg bg-section sm:px-10 z-10"
>
    <a href="/" class="font-main text-secondary text-2xl" title="MonagasBox">
        Monagas<span class="text-primary">Box</span>
    </a>

    <nav class="font-secondary hidden lg:flex space-x-10 text-secondary">
        {
            pages.map(
                ({
                    title,
                    url,
                    active,
                    disabled,
                    soondate,
                    type,
                    rel,
                    target,
                }) => (
                    <div class="flex flex-col items-center">
                        {type === "button" ? (
                            <>
                                {session ? (
                                    <SignOut
                                        class:list={[
                                            { "pointer-events-none": disabled },
                                        ]}
                                    >
                                        {title}
                                    </SignOut>
                                ) : (
                                    <SignIn
                                        class:list={[
                                            { "pointer-events-none": disabled },
                                        ]}
                                    >
                                        {title}
                                    </SignIn>
                                )}
                            </>
                        ) : (
                            <a
                                href={url}
                                title={title}
                                rel={rel}
                                target={target}
                                class:list={[
                                    { "current-page": active },
                                    { "pointer-events-none": disabled },
                                ]}
                            >
                                {title}
                            </a>
                        )}

                        {soondate && disabled && (
                            <span class="text-xs text-primary">{soondate}</span>
                        )}
                    </div>
                )
            )
        }
    </nav>

    <div class="block lg:hidden">
        <HamburguerMenu />
        <nav
            id="nav"
            class="absolute top-20 left-0 w-full bg-section shadow-lg text-secondary font-secondary opacity-0 transition-opacity duration-300 ease-in-out z-10 pointer-events-none"
        >
            <div class="flex flex-col items-center space-y-10 py-5">
                {
                    pages.map(
                        ({
                            title,
                            url,
                            active,
                            disabled,
                            soondate,
                            type,
                            rel,
                            target,
                        }) => (
                            <div class="flex flex-col items-center">
                                {type === "button" ? (
                                    <>
                                        {session ? (
                                            <SignOut
                                                class:list={[
                                                    {
                                                        "pointer-events-none":
                                                            disabled,
                                                    },
                                                ]}
                                            >
                                                {title}
                                            </SignOut>
                                        ) : (
                                            <SignIn
                                                class:list={[
                                                    {
                                                        "pointer-events-none":
                                                            disabled,
                                                    },
                                                ]}
                                            >
                                                {title}
                                            </SignIn>
                                        )}
                                    </>
                                ) : (
                                    <a
                                        href={url}
                                        title={title}
                                        rel={rel}
                                        target={target}
                                        class:list={[
                                            { "current-page": active },
                                            { "pointer-events-none": disabled },
                                        ]}
                                    >
                                        {title}
                                    </a>
                                )}
                                {soondate && disabled && (
                                    <span class="text-xs text-primary">
                                        {soondate}
                                    </span>
                                )}
                            </div>
                        )
                    )
                }
            </div>
        </nav>
    </div>
</header>

<style>
    .current-page {
        border-bottom: 2px solid var(--primary-color);
    }

    #nav {
        pointer-events: auto;
    }

    #nav.opacity-100 {
        opacity: 1;
    }
</style>
